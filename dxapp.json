{
  "name": "fusion_inspector_v1.0.0(2.3.1)",
  "title": "FusionInspector_v1.0.0",
  "summary": "Identify fusions using known 'rescue list' fusion pairs, plus predictions from tools",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "properties": {
    "github release": "pending"
  },
  "inputSpec": [
    {
      "name": "fi_docker",
      "label": "fi_docker",
      "help": "File ID of FusionInspector Docker image in DNA Nexus",
      "class": "file",
      "optional": false
    },
    {
      "name": "r1_fastqs",
      "label": "Read 1 fastq files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fastq.gz"
      ],
      "help": ""
    },
    {
      "name": "r2_fastqs",
      "label": "Read 2 fastq files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fastq.gz"
      ],
      "help": ""
    },
    {
      "name": "known_fusions",
      "label": "known_fusions",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.txt"
      ],
      "help": "",
      "suggestions":[
        {"name":"Test Directory 2020 Fusions","value": {"$dnanexus_link": {"project": "project-Fv28zZQ4pgK1G8883KF254VY","id": "file-Fvxx0z04pgK02fK17f52x6g2"}}}
      ]
    },
    {
      "name": "sr_predictions",
      "label": "star fusion predictions",
      "class": "file",
      "optional": false,
      "patterns": [
        "*fusion_predictions.tsv"
      ],
      "help": "predictions.tsv file output from star fusion"
    },
    {
      "name": "genome_lib",
      "label": "genome_lib",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.gz"
      ],
      "help": "A CTAT genome library, which is a reference file bundle required by Trinity CTAT tools"
    }
  ],
  "outputSpec": [
    {
      "name": "fi_outputs",
      "label": "all fusion inspector outputs",
      "class": "array:file",
      "help": "FusionInspector outputs"
      }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/code.sh",
    "release": "20.04",
    "distribution": "Ubuntu",
    "version": "0"
  },
  "developers":[
    "org-emee_1"
  ],
  "authorizedUsers": [
    "org-emee_1"
  ],
  "access": {
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x32"
        }
      }
    }
  }
}
