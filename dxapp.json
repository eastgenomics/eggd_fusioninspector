{
  "name": "fusion_inspector_v1.0.0",
  "title": "FusionInspector_v1.0.0",
  "summary": "Identify fusions using know fusion pairs",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "properties": {
    "github release": "pending"
  },
  "inputSpec": [
    {
      "name": "left_fq",
      "label": "Left fastq",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz"
      ],
      "help": ""
    },
    {
      "name": "right_fq",
      "label": "right fastq",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz"
      ],
      "help": ""
    },
    {
      "name": "known_fusions",
      "label": "known_fusions",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.txt"
      ],
      "help": ""
    },
    {
      "name": "sr_predictions",
      "label": "star fusion predictions",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv"
      ],
      "help": "predictions.tsv file output from star fusion"
    },
    {
      "name": "genome_lib",
      "label": "genome library",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.gz"
      ],
      "help": "STAR genome resources"
    }
  ],
  "outputSpec": [
    {
      "name": "fi_outputs",
      "label": "all fusion inspector outputs",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/fusion_inspector.sh",
    "release": "16.04",
    "distribution": "Ubuntu",
    "version": "1"
  },
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x16"
        }
      }
    }
  }
}
